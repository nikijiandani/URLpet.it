<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- include head partial -->
    <% include ./partials/_head %>
  </head>
  <body>
    <!-- include header partial -->
    <% include ./partials/_header %>


    <h3 class="center">Create Account</h3>

    <form id="register" action="/register" method="POST">

      <% if(typeof(error1) !== "undefined" && error1) { %>

        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <p><%= error1 %></p>
          <strong>Please enter a valid email and password!</strong>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

      <% } else if (typeof(error2) !== "undefined" && error2) { %>

          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <p><%= error2 %></p>
            <strong>Please enter another email!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

        <% } %>

      <!-- Email -->
      <div class="form-group">
        <label for="email">Email:</label>
        <input class="form-control" type="email" name="email" aria-describedby="emailHelp">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <!-- Password -->
      <div class="form-group">
        <label for="password">Password:</label>
        <input class="form-control" type="password" name="password">
        <button type="submit" class="btn btn-outline-primary">Register</button>
      </div>
    </form>
    <!-- include footer -->
    <% include ./partials/_footer %>
  </body>
</html>