<!-- include header -->
<% include ./partials/_header %>

    <h3>Register to create a TinyURL</h3>
    <form class="form-block" action="/register" method="POST">
      <% if(typeof(error1) !== "undefined" && error1) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <p><%= error1 %></p>
        <strong>Please enter a valid email and password!</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% } else if (typeof(error2) !== "undefined" && error2) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <p><%= error2 %></p>
            <strong>Please enter another email!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% } %>
      <div class="form-group mb-2">
        <!-- Email -->
        <label for="email">Email:</label>
        <input class="form-control" type="email" name="email" aria-describedby="emailHelp" placeholder="Email" style="width: 300px; margin: 1em">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
        <!-- Password -->
      <div class="form-group mb-2">
        <label for="password">Password:</label>
        <input class="form-control" type="password" name="password" placeholder="Password" style="width: 300px; margin: 1em">
        <button type="submit" class="btn btn-primary">Register</button>
      </div>
    </form>
    
<!-- include footer -->
<% include ./partials/_footer %>